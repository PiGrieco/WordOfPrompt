# WordOfPrompt Configuration File
# Copy this file to .env and fill in your actual values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Application environment (development, staging, production)
ENVIRONMENT=development

# Application name and version
APP_NAME=WordOfPrompt
APP_VERSION=1.0.0

# Debug mode (true/false)
DEBUG=true

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# API KEYS AND EXTERNAL SERVICES
# =============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo
OPENAI_ORG_ID=your_openai_org_id_here

# Rainforest API (Amazon Product Search)
RAINFOREST_API_KEY=your_rainforest_api_key_here

# Amazon Affiliate Program
AMAZON_AFFILIATE_ID=your_amazon_affiliate_tag_here
PROMO_ID=your_amazon_affiliate_tag_here

# Hugging Face API (for OpenSesame model)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_MODEL_ID=PiGrieco/OpenSesame

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database
DATABASE_URL=postgresql://user:password@localhost:5432/wordofprompt
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wordofprompt
DB_USER=wordofprompt_user
DB_PASSWORD=your_secure_password_here

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# WEB SERVER CONFIGURATION
# =============================================================================

# Server settings
HOST=0.0.0.0
PORT=5000
WORKERS=4

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Secret key for session management
SECRET_KEY=your_very_secure_secret_key_here_change_this_in_production

# API rate limiting
MAX_REQUESTS_PER_MINUTE=60

# =============================================================================
# BUSINESS LOGIC SETTINGS
# =============================================================================

# Intent analysis
INTENT_THRESHOLD=0.95
KEYWORD_EXTRACTION_METHOD=rake
MAX_KEYWORDS=5

# Product search
DEFAULT_AMAZON_DOMAIN=amazon.com
MAX_SEARCH_RESULTS=10
